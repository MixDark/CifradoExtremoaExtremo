/* Tema oscuro para la app de cifrado E2E */
QWidget {
    background-color: #232629;
    color: #f0f0f0;
}
QPushButton {
    background-color: #444;
    color: #fff;
    border: 1px solid #666;
    padding: 4px 8px;
}
QPushButton:hover {
    background-color: #666;
}
QTextEdit, QLineEdit {
    background-color: #2b2b2b;
    color: #f0f0f0;
    border: 1px solid #555;
}
QLabel {
    color: #f0f0f0;
}
QStatusBar {
    background: #232629;
    color: #a0ffb0;
    border-top: 1px solid #444;
}
